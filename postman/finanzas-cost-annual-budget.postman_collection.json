{
  "info": {
    "name": "Finanzas Cost Forecast Manual & Annual Budget",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Requests for manual cost forecast overrides and annual budget analog form endpoints."
  },
  "item": [
    {
      "name": "GET Cost Forecast Manual",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/finanzas/cost/forecast/manual?project_id={{project_id}}&year={{year}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "finanzas",
            "cost",
            "forecast",
            "manual"
          ],
          "query": [
            { "key": "project_id", "value": "{{project_id}}" },
            { "key": "year", "value": "{{year}}" }
          ]
        }
      }
    },
    {
      "name": "PUT Cost Forecast Manual",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"project_id\": \"{{project_id}}\",\n  \"year\": {{year}},\n  \"rubro_id\": \"{{rubro_id}}\",\n  \"manual_value\": 100000,\n  \"currency\": \"USD\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/finanzas/cost/forecast/manual",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "finanzas",
            "cost",
            "forecast",
            "manual"
          ]
        }
      }
    },
    {
      "name": "POST Cost Forecast Manual Bulk",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"project_id\": \"{{project_id}}\",\n  \"year\": {{year}},\n  \"entries\": [\n    {\n      \"project_id\": \"{{project_id}}\",\n      \"year\": {{year}},\n      \"rubro_id\": \"{{rubro_id}}\",\n      \"manual_value\": 100000,\n      \"currency\": \"USD\",\n      \"source\": \"bulk\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/finanzas/cost/forecast/manual",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "finanzas",
            "cost",
            "forecast",
            "manual"
          ]
        }
      }
    },
    {
      "name": "GET Annual Budget",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/finanzas/budget/annual?year={{year}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "finanzas",
            "budget",
            "annual"
          ],
          "query": [
            { "key": "year", "value": "{{year}}" }
          ]
        }
      }
    },
    {
      "name": "PUT Annual Budget",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"year\": {{year}},\n  \"rubro_id\": \"{{rubro_id}}\",\n  \"contracted_total\": 90000000,\n  \"projected_mod_total\": 85000000,\n  \"actual_total\": 80000000,\n  \"currency\": \"USD\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/finanzas/budget/annual",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "finanzas",
            "budget",
            "annual"
          ]
        }
      }
    },
    {
      "name": "POST Annual Budget Bulk",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"year\": {{year}},\n  \"entries\": [\n    {\n      \"year\": {{year}},\n      \"rubro_id\": \"{{rubro_id}}\",\n      \"contracted_total\": 90000000,\n      \"projected_mod_total\": 85000000,\n      \"actual_total\": 80000000,\n      \"currency\": \"USD\",\n      \"source\": \"bulk\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/finanzas/budget/annual",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "finanzas",
            "budget",
            "annual"
          ]
        }
      }
    }
  ]
}
